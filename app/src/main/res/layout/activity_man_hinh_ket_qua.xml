<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background3"
    tools:context=".ManHinhKetQua">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.636">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/hero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:paddingTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/header">
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/bg_trophy"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_trophy" />
        </FrameLayout>
        <ntu.edu.nguyenquockhanh.btl_quizzing.style.GradientTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="Chúc Mừng!"
            android:includeFontPadding="false"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="40dp">
        </ntu.edu.nguyenquockhanh.btl_quizzing.style.GradientTextView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blur"
            app:cardCornerRadius="100dp"
            app:strokeWidth="2dp"
            app:strokeColor="#3B3B43">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_check">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã trả lời đúng 10/10 câu"
                    android:layout_gravity="top"
                    style="@style/Body"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blur"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="40dp"
            app:strokeWidth="2dp"
            app:strokeColor="#3B3B43">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TỔNG ĐIỂM"
                    style="@style/Body"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    style="@style/Title"
                    android:textSize="70dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero">

        <com.google.android.material.button.MaterialButton
            style="@style/MyButtonPrimary"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Chơi lại"
            app:icon="@drawable/ic_back2"
            app:iconGravity="textStart" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chudekhac"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                style="@style/MyButton"
                app:icon="@drawable/ic_menu2"
                app:iconGravity="textStart"
                app:iconTint="#8B5CF6"
                android:layout_marginEnd="10dp"
                android:text="Chủ đề khác"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manhinhchinh"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                style="@style/MyButton"
                app:icon="@drawable/ic_home"
                app:iconGravity="textStart"
                app:iconTint="#71717A"
                android:text="Màn hình chính"/>
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>